<!-- Payment Info Page -->
<div class="max-w-[960px] mx-auto px-4 lg:px-8 py-12">

    <!-- Page Header -->
    <div class="text-center mb-12">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-primary/10 text-primary mb-4">
            <span class="material-symbols-outlined text-3xl">payments</span>
        </div>
        <h1 class="text-3xl md:text-4xl font-bold text-olive-dark mb-4">
            <%= t('paymentInfo.title', 'طرق الدفع' ) %>
        </h1>
        <p class="text-olive-light text-lg">
            <%= t('paymentInfo.subtitle', 'طرق دفع آمنة ومتعددة لتناسب احتياجاتك' ) %>
        </p>
    </div>

    <!-- Content -->
    <div class="space-y-8">

        <!-- Payment Methods -->
        <section class="bg-white rounded-2xl border border-gray-100 p-6 md:p-8">
            <h2 class="text-xl font-bold text-olive-dark mb-6 flex items-center gap-2">
                <span class="material-symbols-outlined text-primary">credit_card</span>
                <%= t('paymentInfo.methods.title', 'طرق الدفع المتاحة' ) %>
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

                <!-- Cash on Delivery -->
                <div class="bg-gray-50 rounded-xl p-5 border-2 border-primary">
                    <div class="flex items-center gap-3 mb-3">
                        <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center">
                            <span class="material-symbols-outlined text-primary text-2xl">local_shipping</span>
                        </div>
                        <div>
                            <h3 class="font-bold text-olive-dark">
                                <%= t('paymentInfo.methods.cod.title', 'الدفع عند الاستلام' ) %>
                            </h3>
                            <span class="text-xs bg-green-100 text-green-800 px-2 py-0.5 rounded-full">
                                <%= t('paymentInfo.methods.cod.badge', 'الأكثر شيوعاً' ) %>
                            </span>
                        </div>
                    </div>
                    <p class="text-sm text-olive-light">
                        <%= t('paymentInfo.methods.cod.description', 'ادفع نقداً عند وصول الطلب لباب منزلك. لا حاجة لبطاقة ائتمان.'
                            ) %>
                    </p>
                </div>

                <!-- Credit Card -->
                <div class="bg-gray-50 rounded-xl p-5">
                    <div class="flex items-center gap-3 mb-3">
                        <div class="w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center">
                            <span class="material-symbols-outlined text-blue-600 text-2xl">credit_card</span>
                        </div>
                        <div>
                            <h3 class="font-bold text-olive-dark">
                                <%= t('paymentInfo.methods.card.title', 'بطاقة ائتمان' ) %>
                            </h3>
                        </div>
                    </div>
                    <p class="text-sm text-olive-light mb-3">
                        <%= t('paymentInfo.methods.card.description', 'نقبل جميع البطاقات البنكية الرئيسية' ) %>
                    </p>
                    <div class="flex gap-2">
                        <div
                            class="w-12 h-7 bg-white border border-gray-200 rounded flex items-center justify-center text-xs font-bold text-blue-800">
                            VISA</div>
                        <div
                            class="w-12 h-7 bg-white border border-gray-200 rounded flex items-center justify-center text-xs font-bold text-red-600">
                            MC</div>
                        <div
                            class="w-12 h-7 bg-white border border-gray-200 rounded flex items-center justify-center text-xs font-bold text-green-700">
                            Meeza</div>
                    </div>
                </div>

                <!-- Mobile Wallet -->
                <div class="bg-gray-50 rounded-xl p-5">
                    <div class="flex items-center gap-3 mb-3">
                        <div class="w-12 h-12 rounded-full bg-purple-100 flex items-center justify-center">
                            <span class="material-symbols-outlined text-purple-600 text-2xl">phone_android</span>
                        </div>
                        <div>
                            <h3 class="font-bold text-olive-dark">
                                <%= t('paymentInfo.methods.wallet.title', 'المحافظ الإلكترونية' ) %>
                            </h3>
                        </div>
                    </div>
                    <p class="text-sm text-olive-light mb-3">
                        <%= t('paymentInfo.methods.wallet.description', 'ادفع من محفظتك الإلكترونية بسهولة' ) %>
                    </p>
                    <div class="flex gap-2">
                        <div
                            class="w-16 h-7 bg-white border border-gray-200 rounded flex items-center justify-center text-xs font-bold text-red-600">
                            Vodafone</div>
                        <div
                            class="w-14 h-7 bg-white border border-gray-200 rounded flex items-center justify-center text-xs font-bold text-orange-600">
                            Fawry</div>
                    </div>
                </div>

                <!-- Bank Transfer -->
                <div class="bg-gray-50 rounded-xl p-5">
                    <div class="flex items-center gap-3 mb-3">
                        <div class="w-12 h-12 rounded-full bg-green-100 flex items-center justify-center">
                            <span class="material-symbols-outlined text-green-600 text-2xl">account_balance</span>
                        </div>
                        <div>
                            <h3 class="font-bold text-olive-dark">
                                <%= t('paymentInfo.methods.transfer.title', 'تحويل بنكي' ) %>
                            </h3>
                        </div>
                    </div>
                    <p class="text-sm text-olive-light">
                        <%= t('paymentInfo.methods.transfer.description', 'حول المبلغ مباشرة إلى حسابنا البنكي. للطلبات الكبيرة.'
                            ) %>
                    </p>
                </div>
            </div>
        </section>

        <!-- Security -->
        <section class="bg-white rounded-2xl border border-gray-100 p-6 md:p-8">
            <h2 class="text-xl font-bold text-olive-dark mb-6 flex items-center gap-2">
                <span class="material-symbols-outlined text-primary">shield</span>
                <%= t('paymentInfo.security.title', 'أمان الدفع' ) %>
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="text-center">
                    <div class="w-14 h-14 rounded-full bg-green-100 flex items-center justify-center mx-auto mb-3">
                        <span class="material-symbols-outlined text-green-600 text-2xl">lock</span>
                    </div>
                    <h3 class="font-bold text-olive-dark mb-1">
                        <%= t('paymentInfo.security.ssl.title', 'تشفير SSL' ) %>
                    </h3>
                    <p class="text-sm text-olive-light">
                        <%= t('paymentInfo.security.ssl.description', 'جميع البيانات مشفرة بأحدث تقنيات الأمان' ) %>
                    </p>
                </div>
                <div class="text-center">
                    <div class="w-14 h-14 rounded-full bg-blue-100 flex items-center justify-center mx-auto mb-3">
                        <span class="material-symbols-outlined text-blue-600 text-2xl">verified_user</span>
                    </div>
                    <h3 class="font-bold text-olive-dark mb-1">
                        <%= t('paymentInfo.security.secure3d.title', '3D Secure' ) %>
                    </h3>
                    <p class="text-sm text-olive-light">
                        <%= t('paymentInfo.security.secure3d.description', 'حماية إضافية لبطاقتك الائتمانية' ) %>
                    </p>
                </div>
                <div class="text-center">
                    <div class="w-14 h-14 rounded-full bg-purple-100 flex items-center justify-center mx-auto mb-3">
                        <span class="material-symbols-outlined text-purple-600 text-2xl">privacy_tip</span>
                    </div>
                    <h3 class="font-bold text-olive-dark mb-1">
                        <%= t('paymentInfo.security.privacy.title', 'خصوصية تامة' ) %>
                    </h3>
                    <p class="text-sm text-olive-light">
                        <%= t('paymentInfo.security.privacy.description', 'لا نحتفظ ببيانات بطاقتك' ) %>
                    </p>
                </div>
            </div>
        </section>

        <!-- Payment Process -->
        <section class="bg-white rounded-2xl border border-gray-100 p-6 md:p-8">
            <h2 class="text-xl font-bold text-olive-dark mb-6 flex items-center gap-2">
                <span class="material-symbols-outlined text-primary">checklist</span>
                <%= t('paymentInfo.steps.title', 'خطوات الدفع' ) %>
            </h2>

            <div class="relative">
                <div class="absolute top-0 <%= isRTL ? 'right-[19px]' : 'left-[19px]' %> h-full w-0.5 bg-gray-100">
                </div>

                <div class="space-y-6">
                    <div class="flex gap-4 relative">
                        <div
                            class="w-10 h-10 rounded-full bg-primary text-white flex items-center justify-center z-10 text-sm font-bold">
                            1</div>
                        <div class="pt-2">
                            <h3 class="font-bold text-olive-dark">
                                <%= t('paymentInfo.steps.step1.title', 'أضف المنتجات للسلة' ) %>
                            </h3>
                            <p class="text-sm text-olive-light">
                                <%= t('paymentInfo.steps.step1.description', 'تصفح المنتجات وأضف ما تريد شراءه' ) %>
                            </p>
                        </div>
                    </div>

                    <div class="flex gap-4 relative">
                        <div
                            class="w-10 h-10 rounded-full bg-primary text-white flex items-center justify-center z-10 text-sm font-bold">
                            2</div>
                        <div class="pt-2">
                            <h3 class="font-bold text-olive-dark">
                                <%= t('paymentInfo.steps.step2.title', 'أدخل بيانات الشحن' ) %>
                            </h3>
                            <p class="text-sm text-olive-light">
                                <%= t('paymentInfo.steps.step2.description', 'أدخل عنوانك ومعلومات التواصل' ) %>
                            </p>
                        </div>
                    </div>

                    <div class="flex gap-4 relative">
                        <div
                            class="w-10 h-10 rounded-full bg-primary text-white flex items-center justify-center z-10 text-sm font-bold">
                            3</div>
                        <div class="pt-2">
                            <h3 class="font-bold text-olive-dark">
                                <%= t('paymentInfo.steps.step3.title', 'اختر طريقة الدفع' ) %>
                            </h3>
                            <p class="text-sm text-olive-light">
                                <%= t('paymentInfo.steps.step3.description', 'اختر الطريقة المناسبة لك من الخيارات المتاحة'
                                    ) %>
                            </p>
                        </div>
                    </div>

                    <div class="flex gap-4 relative">
                        <div class="w-10 h-10 rounded-full bg-accent text-white flex items-center justify-center z-10">
                            <span class="material-symbols-outlined">check</span>
                        </div>
                        <div class="pt-2">
                            <h3 class="font-bold text-olive-dark">
                                <%= t('paymentInfo.steps.step4.title', 'أكد الطلب' ) %>
                            </h3>
                            <p class="text-sm text-olive-light">
                                <%= t('paymentInfo.steps.step4.description', 'راجع الطلب وأكده. ستصلك رسالة تأكيد.' ) %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- FAQs -->
        <section class="bg-white rounded-2xl border border-gray-100 p-6 md:p-8">
            <h2 class="text-xl font-bold text-olive-dark mb-6 flex items-center gap-2">
                <span class="material-symbols-outlined text-primary">help</span>
                <%= t('paymentInfo.faq.title', 'الأسئلة الشائعة' ) %>
            </h2>

            <div class="space-y-4">
                <details class="group border border-gray-100 rounded-xl">
                    <summary class="flex items-center justify-between p-4 cursor-pointer font-medium text-olive-dark">
                        <%= t('paymentInfo.faq.q1', 'هل الدفع آمن على موقعكم؟' ) %>
                            <span
                                class="material-symbols-outlined text-olive-light group-open:rotate-180 transition-transform">expand_more</span>
                    </summary>
                    <div class="px-4 pb-4 text-olive-light text-sm">
                        <%= t('paymentInfo.faq.a1', 'نعم، نستخدم أحدث تقنيات التشفير SSL وبوابات دفع موثوقة. لا نحتفظ ببيانات بطاقتك الائتمانية.'
                            ) %>
                    </div>
                </details>

                <details class="group border border-gray-100 rounded-xl">
                    <summary class="flex items-center justify-between p-4 cursor-pointer font-medium text-olive-dark">
                        <%= t('paymentInfo.faq.q2', 'متى يُخصم المبلغ من حسابي؟' ) %>
                            <span
                                class="material-symbols-outlined text-olive-light group-open:rotate-180 transition-transform">expand_more</span>
                    </summary>
                    <div class="px-4 pb-4 text-olive-light text-sm">
                        <%= t('paymentInfo.faq.a2', 'يتم خصم المبلغ فور تأكيد الطلب للبطاقات الائتمانية. أما الدفع عند الاستلام فيتم الدفع نقداً عند وصول الطلب.'
                            ) %>
                    </div>
                </details>

                <details class="group border border-gray-100 rounded-xl">
                    <summary class="flex items-center justify-between p-4 cursor-pointer font-medium text-olive-dark">
                        <%= t('paymentInfo.faq.q3', 'كيف أحصل على فاتورة؟' ) %>
                            <span
                                class="material-symbols-outlined text-olive-light group-open:rotate-180 transition-transform">expand_more</span>
                    </summary>
                    <div class="px-4 pb-4 text-olive-light text-sm">
                        <%= t('paymentInfo.faq.a3', 'يتم إرسال الفاتورة إلى بريدك الإلكتروني تلقائياً، ويمكنك أيضاً تحميلها من صفحة تفاصيل الطلب.'
                            ) %>
                    </div>
                </details>

                <details class="group border border-gray-100 rounded-xl">
                    <summary class="flex items-center justify-between p-4 cursor-pointer font-medium text-olive-dark">
                        <%= t('paymentInfo.faq.q4', 'ماذا لو فشلت عملية الدفع؟' ) %>
                            <span
                                class="material-symbols-outlined text-olive-light group-open:rotate-180 transition-transform">expand_more</span>
                    </summary>
                    <div class="px-4 pb-4 text-olive-light text-sm">
                        <%= t('paymentInfo.faq.a4', 'تأكد من صحة بيانات البطاقة والرصيد المتاح. إذا استمرت المشكلة، جرب طريقة دفع أخرى أو تواصل مع بنكك.'
                            ) %>
                    </div>
                </details>
            </div>
        </section>

        <!-- Contact CTA -->
        <section class="bg-primary/10 rounded-2xl p-6 md:p-8 text-center">
            <h3 class="text-xl font-bold text-olive-dark mb-2">
                <%= t('paymentInfo.cta.title', 'تحتاج مساعدة في الدفع؟' ) %>
            </h3>
            <p class="text-olive-light mb-4">
                <%= t('paymentInfo.cta.description', 'فريقنا جاهز لمساعدتك على مدار الساعة' ) %>
            </p>
            <div class="flex flex-wrap justify-center gap-4">
                <a href="/contact"
                    class="inline-flex items-center gap-2 bg-primary hover:bg-primary-dark text-white px-6 py-3 rounded-lg font-bold transition-all">
                    <span class="material-symbols-outlined">support_agent</span>
                    <%= t('paymentInfo.cta.button', 'تواصل معنا' ) %>
                </a>
                <a href="tel:+201234567890"
                    class="inline-flex items-center gap-2 bg-white hover:bg-gray-50 text-olive-dark px-6 py-3 rounded-lg font-bold transition-all border border-gray-200">
                    <span class="material-symbols-outlined">call</span>
                    <span dir="ltr">+20 123 456 7890</span>
                </a>
            </div>
        </section>
    </div>
</div>