<!-- About Page -->
<div class="max-w-[1280px] mx-auto px-4 lg:px-8">

    <!-- Hero Section -->
    <section class="py-12 md:py-20">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div class="<%= typeof dir !== 'undefined' && dir === 'ltr' ? 'lg:order-1' : 'lg:order-2' %>">
                <span class="inline-block px-4 py-1.5 rounded-full bg-primary/10 text-primary text-sm font-bold mb-4">
                    <%= t('about.badge', 'من نحن' ) %>
                </span>
                <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-olive-dark leading-tight mb-6">
                    <%= t('about.heroTitle', 'رحلة من قلب الأرض إلى مائدتك' ) %>
                </h1>
                <p class="text-olive-light text-lg leading-relaxed mb-8">
                    <%= t('about.heroDescription', 'منذ أكثر من عشر سنوات ونحن نقدم أفضل أنواع زيت الزيتون المصري الأصيل، من واحة سيوة الساحرة إلى بيتك. نختار بعناية أجود ثمار الزيتون ونعصرها بأحدث التقنيات للحفاظ على كل العناصر الغذائية والنكهة الطبيعية.'
                        ) %>
                </p>
                <div class="flex flex-wrap gap-8">
                    <div>
                        <div class="text-3xl font-bold text-primary">
                            <%= t('about.stats.years', '+١٠' ) %>
                        </div>
                        <div class="text-olive-light text-sm">
                            <%= t('about.stats.yearsLabel', 'سنوات خبرة' ) %>
                        </div>
                    </div>
                    <div>
                        <div class="text-3xl font-bold text-primary">
                            <%= t('about.stats.customers', '+٥٠٠٠' ) %>
                        </div>
                        <div class="text-olive-light text-sm">
                            <%= t('about.stats.customersLabel', 'عميل سعيد' ) %>
                        </div>
                    </div>
                    <div>
                        <div class="text-3xl font-bold text-primary">
                            <%= t('about.stats.natural', '١٠٠٪' ) %>
                        </div>
                        <div class="text-olive-light text-sm">
                            <%= t('about.stats.naturalLabel', 'طبيعي' ) %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="relative <%= typeof dir !== 'undefined' && dir === 'ltr' ? 'lg:order-2' : 'lg:order-1' %>">
                <div class="aspect-[4/3] rounded-2xl overflow-hidden shadow-xl">
                    <img src="https://images.unsplash.com/photo-1474979266404-7eaacbcd87c5?w=800&q=80"
                        alt="<%= t('about.imageAlt', 'مزارع الزيتون') %>" class="w-full h-full object-cover">
                </div>
                <div
                    class="absolute -bottom-6 <%= typeof dir !== 'undefined' && dir === 'ltr' ? '-right-6' : '-left-6' %> bg-white rounded-xl shadow-lg p-4 hidden md:block">
                    <div class="flex items-center gap-3">
                        <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center">
                            <span class="material-symbols-outlined text-primary text-2xl">eco</span>
                        </div>
                        <div>
                            <div class="font-bold text-olive-dark">
                                <%= t('about.organic', 'منتج عضوي' ) %>
                            </div>
                            <div class="text-xs text-olive-light">
                                <%= t('about.organicCertified', 'معتمد ومضمون' ) %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Our Story -->
    <section class="py-16 border-t border-gray-100">
        <div class="max-w-3xl mx-auto text-center mb-12">
            <h2 class="text-2xl md:text-3xl font-bold text-olive-dark mb-4">
                <%= t('about.story', 'قصتنا' ) %>
            </h2>
            <p class="text-olive-light leading-relaxed">
                <%= t('about.storyDescription', 'بدأت قصتنا من حب عميق للأرض المصرية ومنتجاتها الطبيعية. في واحة سيوة، حيث تنمو أشجار الزيتون تحت شمس مصر الدافئة، وجدنا كنزاً طبيعياً نفخر بتقديمه للعالم.'
                    ) %>
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="bg-white rounded-2xl border border-gray-100 p-6 text-center">
                <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-4">
                    <span class="material-symbols-outlined text-primary text-3xl">agriculture</span>
                </div>
                <h3 class="font-bold text-olive-dark text-lg mb-2">
                    <%= t('about.process.farming', 'الزراعة' ) %>
                </h3>
                <p class="text-olive-light text-sm">
                    <%= t('about.process.farmingDesc', 'نتعاون مع مزارعين محليين يستخدمون أساليب زراعة تقليدية وعضوية.'
                        ) %>
                </p>
            </div>
            <div class="bg-white rounded-2xl border border-gray-100 p-6 text-center">
                <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-4">
                    <span class="material-symbols-outlined text-primary text-3xl">precision_manufacturing</span>
                </div>
                <h3 class="font-bold text-olive-dark text-lg mb-2">
                    <%= t('about.process.production', 'الإنتاج' ) %>
                </h3>
                <p class="text-olive-light text-sm">
                    <%= t('about.process.productionDesc', 'نستخدم أحدث تقنيات العصر البارد للحفاظ على جودة الزيت وقيمته الغذائية.'
                        ) %>
                </p>
            </div>
            <div class="bg-white rounded-2xl border border-gray-100 p-6 text-center">
                <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-4">
                    <span class="material-symbols-outlined text-primary text-3xl">verified</span>
                </div>
                <h3 class="font-bold text-olive-dark text-lg mb-2">
                    <%= t('about.process.quality', 'الجودة' ) %>
                </h3>
                <p class="text-olive-light text-sm">
                    <%= t('about.process.qualityDesc', 'نختبر كل دفعة للتأكد من مطابقتها لأعلى معايير الجودة العالمية.'
                        ) %>
                </p>
            </div>
        </div>
    </section>

    <!-- Values -->
    <section class="py-16 bg-[#f9f7f2] -mx-4 lg:-mx-8 px-4 lg:px-8">
        <div class="max-w-[1280px] mx-auto">
            <div class="text-center mb-12">
                <h2 class="text-2xl md:text-3xl font-bold text-olive-dark mb-4">
                    <%= t('about.values', 'قيمنا' ) %>
                </h2>
                <p class="text-olive-light">
                    <%= t('about.valuesSubtitle', 'المبادئ التي تحكم كل ما نقوم به' ) %>
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <div class="bg-white rounded-xl p-6">
                    <span class="material-symbols-outlined text-primary text-3xl mb-4">spa</span>
                    <h3 class="font-bold text-olive-dark mb-2">
                        <%= t('about.valuesList.natural', 'الطبيعية' ) %>
                    </h3>
                    <p class="text-olive-light text-sm">
                        <%= t('about.valuesList.naturalDesc', 'منتجات خالية 100% من المواد الحافظة والإضافات الكيميائية.'
                            ) %>
                    </p>
                </div>
                <div class="bg-white rounded-xl p-6">
                    <span class="material-symbols-outlined text-primary text-3xl mb-4">handshake</span>
                    <h3 class="font-bold text-olive-dark mb-2">
                        <%= t('about.valuesList.honesty', 'الأمانة' ) %>
                    </h3>
                    <p class="text-olive-light text-sm">
                        <%= t('about.valuesList.honestyDesc', 'نلتزم بالشفافية في كل معاملاتنا مع عملائنا وشركائنا.' )
                            %>
                    </p>
                </div>
                <div class="bg-white rounded-xl p-6">
                    <span class="material-symbols-outlined text-primary text-3xl mb-4">star</span>
                    <h3 class="font-bold text-olive-dark mb-2">
                        <%= t('about.valuesList.excellence', 'التميز' ) %>
                    </h3>
                    <p class="text-olive-light text-sm">
                        <%= t('about.valuesList.excellenceDesc', 'نسعى دائماً لتقديم أفضل منتج وأفضل خدمة لعملائنا.' )
                            %>
                    </p>
                </div>
                <div class="bg-white rounded-xl p-6">
                    <span class="material-symbols-outlined text-primary text-3xl mb-4">diversity_1</span>
                    <h3 class="font-bold text-olive-dark mb-2">
                        <%= t('about.valuesList.community', 'المجتمع' ) %>
                    </h3>
                    <p class="text-olive-light text-sm">
                        <%= t('about.valuesList.communityDesc', 'ندعم المزارعين المحليين ونساهم في تنمية مجتمعاتنا.' )
                            %>
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="py-16 text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-olive-dark mb-4">
            <%= t('about.cta.title', 'جرب الفرق بنفسك' ) %>
        </h2>
        <p class="text-olive-light mb-8 max-w-xl mx-auto">
            <%= t('about.cta.description', 'اكتشف مذاق زيت الزيتون الأصيل واستمتع بتجربة طهي لا تُنسى.' ) %>
        </p>
        <a href="/products"
            class="inline-flex items-center gap-2 bg-primary hover:bg-primary-dark text-white px-8 py-4 rounded-lg font-bold transition-all shadow-lg">
            <span class="material-symbols-outlined">storefront</span>
            <%= t('about.cta.button', 'تسوق الآن' ) %>
        </a>
    </section>
</div>