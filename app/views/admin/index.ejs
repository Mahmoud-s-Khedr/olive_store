<!-- Admin Dashboard -->

<!-- Page Header -->
<div class="mb-8">
    <h1 class="text-2xl font-bold text-slate-900">
        <%= t('admin.dashboard.title', 'لوحة التحكم' ) %>
    </h1>
    <p class="text-slate-500 mt-1">
        <%= t('admin.dashboard.welcome', 'مرحباً بك! إليك نظرة عامة على متجرك' ) %>
    </p>
</div>

<!-- Stats Grid -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">

    <!-- Total Sales -->
    <div class="bg-white rounded-xl border border-gray-100 p-6 hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 rounded-xl bg-green-100 flex items-center justify-center">
                <span class="material-symbols-outlined text-green-600 text-2xl">attach_money</span>
            </div>
            <span
                class="text-xs font-medium text-green-600 bg-green-100 px-2 py-1 rounded-full rtl:flex-row-reverse ltr:flex-row">
                <span dir="ltr">+12%</span>
            </span>
        </div>
        <h3 class="text-slate-500 text-sm mb-1">
            <%= t('admin.stats.totalSales', 'إجمالي المبيعات' ) %>
        </h3>
        <p id="stat-sales" class="text-2xl font-bold text-slate-900">---</p>
    </div>

    <!-- Total Orders -->
    <div class="bg-white rounded-xl border border-gray-100 p-6 hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 rounded-xl bg-blue-100 flex items-center justify-center">
                <span class="material-symbols-outlined text-blue-600 text-2xl">shopping_bag</span>
            </div>
            <span
                class="text-xs font-medium text-blue-600 bg-blue-100 px-2 py-1 rounded-full rtl:flex-row-reverse ltr:flex-row">
                <span dir="ltr">+5%</span>
            </span>
        </div>
        <h3 class="text-slate-500 text-sm mb-1">
            <%= t('admin.stats.totalOrders', 'الطلبات' ) %>
        </h3>
        <p id="stat-orders" class="text-2xl font-bold text-slate-900">---</p>
    </div>

    <!-- Total Products -->
    <div class="bg-white rounded-xl border border-gray-100 p-6 hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 rounded-xl bg-purple-100 flex items-center justify-center">
                <span class="material-symbols-outlined text-purple-600 text-2xl">inventory_2</span>
            </div>
        </div>
        <h3 class="text-slate-500 text-sm mb-1">
            <%= t('admin.stats.totalProducts', 'المنتجات' ) %>
        </h3>
        <p id="stat-products" class="text-2xl font-bold text-slate-900">---</p>
    </div>

    <!-- Total Customers -->
    <div class="bg-white rounded-xl border border-gray-100 p-6 hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 rounded-xl bg-amber-100 flex items-center justify-center">
                <span class="material-symbols-outlined text-amber-600 text-2xl">group</span>
            </div>
            <span
                class="text-xs font-medium text-amber-600 bg-amber-100 px-2 py-1 rounded-full rtl:flex-row-reverse ltr:flex-row">
                <span dir="ltr">+8%</span>
            </span>
        </div>
        <h3 class="text-slate-500 text-sm mb-1">
            <%= t('admin.stats.totalCustomers', 'العملاء' ) %>
        </h3>
        <p id="stat-customers" class="text-2xl font-bold text-slate-900">---</p>
    </div>
</div>

<!-- Main Content Grid -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

    <!-- Recent Orders -->
    <div class="lg:col-span-2 bg-white rounded-xl border border-gray-100 overflow-hidden">
        <div class="flex items-center justify-between px-6 py-4 border-b border-gray-100">
            <h2 class="font-bold text-slate-900">
                <%= t('admin.dashboard.recentOrders', 'أحدث الطلبات' ) %>
            </h2>
            <a href="/admin/orders" class="text-primary text-sm font-medium hover:underline">
                <%= t('common.viewAll', 'عرض الكل' ) %>
            </a>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full text-sm">
                <thead class="bg-gray-50 text-slate-500">
                    <tr>
                        <th class="text-right px-6 py-3 font-medium rtl:text-right ltr:text-left">
                            <%= t('admin.orders.table.orderId', 'رقم الطلب' ) %>
                        </th>
                        <th class="text-right px-6 py-3 font-medium rtl:text-right ltr:text-left">
                            <%= t('admin.orders.table.customer', 'العميل' ) %>
                        </th>
                        <th class="text-right px-6 py-3 font-medium rtl:text-right ltr:text-left">
                            <%= t('admin.orders.table.total', 'الإجمالي' ) %>
                        </th>
                        <th class="text-right px-6 py-3 font-medium rtl:text-right ltr:text-left">
                            <%= t('admin.orders.table.status', 'الحالة' ) %>
                        </th>
                        <th class="text-right px-6 py-3 font-medium rtl:text-right ltr:text-left">
                            <%= t('admin.orders.table.date', 'التاريخ' ) %>
                        </th>
                    </tr>
                </thead>
                <tbody id="recent-orders" class="divide-y divide-gray-50">
                    <tr>
                        <td colspan="5" class="px-6 py-8 text-center text-slate-400">
                            <%= t('common.loading', 'جاري التحميل...' ) %>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Quick Actions & Stats -->
    <div class="space-y-6">

        <!-- Quick Actions -->
        <div class="bg-white rounded-xl border border-gray-100 p-6">
            <h2 class="font-bold text-slate-900 mb-4">
                <%= t('admin.dashboard.quickActions', 'إجراءات سريعة' ) %>
            </h2>
            <div class="grid grid-cols-2 gap-3">
                <a href="/admin/products/new"
                    class="flex flex-col items-center gap-2 p-4 rounded-xl bg-primary/5 hover:bg-primary/10 text-primary transition-colors">
                    <span class="material-symbols-outlined text-2xl">add_box</span>
                    <span class="text-xs font-medium">
                        <%= t('admin.dashboard.newProduct', 'منتج جديد' ) %>
                    </span>
                </a>
                <a href="/admin/categories/new"
                    class="flex flex-col items-center gap-2 p-4 rounded-xl bg-blue-50 hover:bg-blue-100 text-blue-600 transition-colors">
                    <span class="material-symbols-outlined text-2xl">create_new_folder</span>
                    <span class="text-xs font-medium">
                        <%= t('admin.dashboard.newCategory', 'فئة جديدة' ) %>
                    </span>
                </a>
                <a href="/admin/orders"
                    class="flex flex-col items-center gap-2 p-4 rounded-xl bg-amber-50 hover:bg-amber-100 text-amber-600 transition-colors">
                    <span class="material-symbols-outlined text-2xl">receipt_long</span>
                    <span class="text-xs font-medium">
                        <%= t('admin.dashboard.orders', 'الطلبات' ) %>
                    </span>
                </a>
                <a href="/admin/settings"
                    class="flex flex-col items-center gap-2 p-4 rounded-xl bg-gray-50 hover:bg-gray-100 text-slate-600 transition-colors">
                    <span class="material-symbols-outlined text-2xl">settings</span>
                    <span class="text-xs font-medium">
                        <%= t('admin.dashboard.settings', 'الإعدادات' ) %>
                    </span>
                </a>
            </div>
        </div>

        <!-- Pending Orders Alert -->
        <div id="pending-orders-alert" class="bg-amber-50 border border-amber-200 rounded-xl p-4 hidden">
            <div class="flex items-start gap-3">
                <span class="material-symbols-outlined text-amber-600">notifications_active</span>
                <div>
                    <h3 class="font-bold text-amber-800 mb-1">
                        <%= t('admin.dashboard.pendingOrders', 'طلبات قيد الانتظار' ) %>
                    </h3>
                    <p class="text-sm text-amber-700">
                        <%= t('admin.dashboard.pendingOrdersDesc', 'لديك طلبات تنتظر المعالجة' ) %> <span
                                id="pending-count" class="font-bold">0</span>
                    </p>
                    <a href="/admin/orders?status=pending"
                        class="text-sm text-amber-800 font-medium hover:underline mt-2 inline-block">
                        <%= t('admin.dashboard.viewOrders', 'عرض الطلبات →' ) %>
                    </a>
                </div>
            </div>
        </div>

        <!-- Low Stock Alert -->
        <div id="low-stock-alert" class="bg-red-50 border border-red-200 rounded-xl p-4 hidden">
            <div class="flex items-start gap-3">
                <span class="material-symbols-outlined text-red-600">inventory</span>
                <div>
                    <h3 class="font-bold text-red-800 mb-1">
                        <%= t('admin.dashboard.lowStock', 'تنبيه المخزون' ) %>
                    </h3>
                    <p class="text-sm text-red-700">
                        <%= t('admin.dashboard.lowStockDesc', 'منتجات قاربت على النفاذ' ) %>: <span id="low-stock-count"
                                class="font-bold">0</span>
                    </p>
                    <a href="/admin/products?stock=low"
                        class="text-sm text-red-800 font-medium hover:underline mt-2 inline-block">
                        <%= t('admin.dashboard.viewProducts', 'عرض المنتجات →' ) %>
                    </a>
                </div>
            </div>
        </div>

        <!-- Top Products -->
        <div class="bg-white rounded-xl border border-gray-100 p-6">
            <h2 class="font-bold text-slate-900 mb-4">
                <%= t('admin.dashboard.topProducts', 'أكثر المنتجات مبيعاً' ) %>
            </h2>
            <div id="top-products" class="space-y-3">
                <div class="animate-pulse flex gap-3">
                    <div class="w-12 h-12 bg-gray-100 rounded-lg"></div>
                    <div class="flex-1 space-y-2">
                        <div class="h-4 bg-gray-100 rounded w-3/4"></div>
                        <div class="h-3 bg-gray-100 rounded w-1/2"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', async function () {
        const lang = typeof I18n !== 'undefined' ? I18n.getCurrentLanguage() : 'ar';
        const t = (key, fallback) => typeof I18n !== 'undefined' ? I18n.t(key, fallback) : fallback;

        // Check admin auth
        if (!AuthModule.isAdminLoggedIn()) {
            window.location.href = '/admin/login';
            return;
        }

        // Format price using Utils
        function formatPrice(price) {
            return Utils.formatPrice(price, lang);
        }

        // Format date
        function formatDate(dateStr) {
            return Utils.formatDate(dateStr, lang);
        }

        // Get status badge
        function getStatusBadge(status) {
            return Utils.getStatusBadge(status, lang);
        }

        // Load dashboard stats
        async function loadStats() {
            try {
                const data = await Api.admin.dashboard.getStats();
                const formatNum = lang === 'ar' ? Utils.toArabicNumerals : (n) => n;

                document.getElementById('stat-sales').textContent = formatPrice(data.totalSales || 0);
                document.getElementById('stat-orders').textContent = formatNum(data.totalOrders || 0);
                document.getElementById('stat-products').textContent = formatNum(data.totalProducts || 0);
                document.getElementById('stat-customers').textContent = formatNum(data.totalCustomers || 0);

                // Pending orders alert
                if (data.pendingOrders > 0) {
                    document.getElementById('pending-orders-alert').classList.remove('hidden');
                    document.getElementById('pending-count').textContent = formatNum(data.pendingOrders);
                }

                // Low stock alert
                if (data.lowStockProducts > 0) {
                    document.getElementById('low-stock-alert').classList.remove('hidden');
                    document.getElementById('low-stock-count').textContent = formatNum(data.lowStockProducts);
                }
            } catch (error) {
                console.error('Error loading stats:', error);
                // Set default values
                const formatNum = lang === 'ar' ? Utils.toArabicNumerals : (n) => n;
                document.getElementById('stat-sales').textContent = formatPrice(0);
                document.getElementById('stat-orders').textContent = formatNum(0);
                document.getElementById('stat-products').textContent = formatNum(0);
                document.getElementById('stat-customers').textContent = formatNum(0);
            }
        }

        // Load recent orders
        async function loadRecentOrders() {
            const tbody = document.getElementById('recent-orders');
            const noOrdersMsg = t('common.noOrders', 'لا توجد طلبات');
            const unknownMsg = t('common.unknown', 'غير معروف');

            try {
                const data = await Api.admin.orders.list({ limit: 5 });
                const orders = data.orders || [];

                if (orders.length === 0) {
                    tbody.innerHTML = `<tr><td colspan="5" class="px-6 py-8 text-center text-slate-400">${noOrdersMsg}</td></tr>`;
                    return;
                }

                tbody.innerHTML = orders.map(order => `
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 rtl:text-right ltr:text-left">
                            <a href="/admin/orders/${order.id}" class="text-primary font-medium hover:underline">#${order.id}</a>
                        </td>
                        <td class="px-6 py-4 text-slate-700 rtl:text-right ltr:text-left">${order.customer_name || order.shipping_address?.name || unknownMsg}</td>
                        <td class="px-6 py-4 font-medium text-slate-900 rtl:text-right ltr:text-left">${formatPrice(order.total)}</td>
                        <td class="px-6 py-4 rtl:text-right ltr:text-left">${getStatusBadge(order.status)}</td>
                        <td class="px-6 py-4 text-slate-500 rtl:text-right ltr:text-left">${formatDate(order.created_at)}</td>
                    </tr>
                `).join('');
            } catch (error) {
                console.error('Error loading orders:', error);
                const errorMsg = t('common.errorLoading', 'تعذر تحميل البيانات');
                tbody.innerHTML = `<tr><td colspan="5" class="px-6 py-8 text-center text-slate-400">${errorMsg}</td></tr>`;
            }
        }

        // Load top products
        async function loadTopProducts() {
            const container = document.getElementById('top-products');
            const formatNum = lang === 'ar' ? Utils.toArabicNumerals : (n) => n;

            try {
                const data = await Api.admin.products.list({ sort: 'sales', limit: 5 });
                const products = data.products || [];

                if (products.length === 0) {
                    const noDataMsg = t('common.noData', 'لا توجد بيانات');
                    container.innerHTML = `<p class="text-slate-400 text-sm text-center py-4">${noDataMsg}</p>`;
                    return;
                }

                const name = (p) => lang === 'ar' ? p.name_ar : (p.name_en || p.name_ar);

                container.innerHTML = products.slice(0, 5).map((product, index) => `
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-lg bg-gray-100 overflow-hidden flex-shrink-0">
                            ${product.primary_image ?
                        `<img src="${product.primary_image}" alt="" class="w-full h-full object-cover">` :
                        `<div class="w-full h-full flex items-center justify-center text-slate-400">
                                    <span class="material-symbols-outlined text-xl">inventory_2</span>
                                </div>`
                    }
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-sm font-medium text-slate-900 truncate">${name(product)}</p>
                            <p class="text-xs text-slate-500">${formatPrice(product.price)}</p>
                        </div>
                        <span class="text-xs font-medium text-slate-500">#${formatNum(index + 1)}</span>
                    </div>
                `).join('');
            } catch (error) {
                console.error('Error loading products:', error);
            }
        }

        // Initialize
        loadStats();
        loadRecentOrders();
        loadTopProducts();
    });
</script>